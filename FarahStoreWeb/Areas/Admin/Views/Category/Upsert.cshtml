@model FarahStoreModel.Models.Category
@{
    string SubmitButtonTxt = "ثبت";
    string PageTitle = "ثبت دسته بندی جدید";
    string Icon = "fa-plus";
    if (Model != null)
    {
        SubmitButtonTxt = "بروزرسانی";
        PageTitle = $"ویرایش دسته بندی {Model.Name}";
        Icon = "fa-edit";
    }
}

<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                  @PageTitle
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                      <i class="fa @Icon btn"></i>
                    </li>
                  
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <form method="post" action="/Admin/Category/Upsert" enctype="multipart/form-data" class="form-horizontal form-label-left">

                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            نام
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" asp-for="Name" required="required" class="form-control col-md-7 col-xs-12">
                            <span asp-validation-for="ChaildCategories" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            لوگو
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="file" name="files" class="form-control col-md-7 col-xs-12">
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="/Admin/Category/Index" class="btn btn-primary">انصراف</a>
                            <button type="submit" class="btn btn-success">@SubmitButtonTxt</button>
                        </div>
                    </div>

                </form>
            </div>
        </div>
    </div>
</div>