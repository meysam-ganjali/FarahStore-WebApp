@model IEnumerable<FarahStoreModel.Models.Product>
<partial name="_ToastMessage" />
<div class="page-title">
    <div class="title_left">
        <div class="col-md-5 col-sm-5 col-xs-12 form-group pull-right top_search">
            <form method="Post" action="/Admin/Category/index">
                <div class="input-group">
                    <input type="text" class="form-control" name="searchKey" placeholder="جست و جو دسته بندی">
                    <span class="input-group-btn">
                        <button class="btn btn-secondary" type="submit"><i class="fa fa-search"></i></button>
                    </span>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="clearfix">
</div>
<div class="col-md-12 col-sm-12 col-xs-12">
    <div class="x_panel">
        <div class="x_title">
            <h2>
                لیست دسته بندی ها
            </h2>
            <div class="panel_toolbox">
                <a href="/Admin/Product/CreateProduct" class="btn btn-success">ثبت محصول &nbsp;<i class="fa fa-plus"></i></a>
            </div>
            <div class="clearfix"></div>
        </div>

        <div class="x_content">

            @if (Model.Count() < 1 || Model == null)
            {
                <p class="text-primary">محصولی برای نمایش وجود نداد</p>
            }
            else
            {
                <div class="">
                    <table class="table table-striped table-hover table-bordered jambo_table bulk_action">
                        <thead>
                        <tr class="headings">
                            <td>نام محصول</td>
                            <td>تعداد</td>
                            <td>دسته</td>
                            <td>قیمت</td>
                            <td>عملیات</td>
                        </tr>
                        </thead>
                        <tbody>
                        @foreach (var p in Model)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(p.Slug))
                                    {
                                        <div><p style="color: #262626">@p.Name</p></div>
                                        <div><p >@p.Slug</p></div>
                                    }
                                    else
                                    {
                                        @p.Name
                                    }
                                </td>
                                <td>@p.NumberOfEntries</td>
                                <td>@p.ChaildCategory.Category.Name - @p.ChaildCategory.Name</td>
                                <td>
                                    @if (p.OldPrice > 0)
                                    {
                                        <div><p style="text-decoration: line-through; text-decoration-color: red;text-decoration-style: wavy ">@p.OldPrice</p></div>
                                        <div><p>@p.Price.ToString("n0")</p></div>
                                    }
                                    else
                                    {
                                        @p.Price.ToString("n0")
                                    }
                                </td>
                                <td>
                                    <div class="btn-group">
                                        <button type="button" class="btn btn-secondary">عملیات</button>
                                        <button type="button" class="btn btn-light dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            <span class="caret"></span>
                                            <span class="sr-only">Toggle Dropdown</span>
                                        </button>
                                        <ul class="dropdown-menu">
                                            <li>
                                                    <a onclick="ShowModalAddImage('@p.Id')">
                                                    <i class="fa fa-image text-primary bg-primary"></i>&nbsp;اضافه کردن تصویر
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                    <i class="fa fa-newspaper-o text-success bg-success"></i>&nbsp;اضافه کردن مشخصات
                                                </a>
                                            </li>
                                            <li>
                                                <a href="#">
                                                    <i class="fa fa-cube text-warning bg-warning"></i>&nbsp;ثبت رنگ
                                                </a>
                                            </li>

                                        </ul>
                                    </div>

                                    <a href="#" class="btn btn-info">
                                        <i class="fa fa-edit"></i>
                                    </a>
                                    <a href="#" class="btn btn-danger">
                                        <i class="fa fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        }

                        </tbody>

                    </table>
                </div>
            }

        </div>
    </div>
</div>
@section AdminScripts
{
    <script>
        function ShowModalAddImage(p) {
            $('#AddImage').modal('show');
        }
    </script>
}
@section AdminModal
{
    <div class="modal" id="AddImage" tabindex="-1" role="dialog">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">برند جدید</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">
                    <form method="post" action="/Admin/Berands/CreateBerand" enctype=multipart/form-data>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">نام </label>

                            <div class="col-sm-10">
                                <input type="text" class="form-control" name="name" placeholder="نام  را وارد کنید">
                            </div>
                        </div>
                        <div class="form-group">
                            <label for="inputEmail3" class="col-sm-2 control-label">ایمیل</label>

                            <div class="col-sm-10">
                                <input type="file" class="form-control" name="img">
                            </div>
                        </div>
                        <div class="row">
                            <button type="submit" class="btn btn-primary">ثبت </button>
                        </div>
                    </form>

                </div>
                <div class="modal-footer">

                    <button type="button" class="btn btn-secondary" data-dismiss="modal">انصراف</button>
                </div>
            </div>
        </div>
    </div>
}

