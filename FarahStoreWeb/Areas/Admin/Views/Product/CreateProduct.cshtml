@model FarahStoreModel.Models.Product
<div class="clearfix"></div>
<div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
        <div class="x_panel">
            <div class="x_title">
                <h2>
                    ثبت محصول جدید
                </h2>
                <ul class="nav navbar-right panel_toolbox">
                    <li>
                        <i class="fa fa-plus btn"></i>
                    </li>
                </ul>
                <div class="clearfix"></div>
            </div>
            <div class="x_content">
                <br>
                <form method="post" action="/Admin/Product/CreateProduct" class="form-horizontal form-label-left">
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            نام محصول
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" asp-for="Name" required="required" class="form-control col-md-7 col-xs-12">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            نام لاتین
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="text" asp-for="Slug"  class="form-control col-md-7 col-xs-12">
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            توضیح کوتاه
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <textarea  asp-for="ShortDescription"  class="form-control col-md-7 col-xs-12"></textarea>
                            <span asp-validation-for="ShortDescription" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            توضیح کامل
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <textarea style="height: 150px;"asp-for="FullDescription"  class="form-control col-md-7 col-xs-12"></textarea>
                            <span asp-validation-for="FullDescription" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            تعداد اولیه
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="number" asp-for="NumberOfEntries" required="required" class="form-control col-md-7 col-xs-12">
                            <span asp-validation-for="NumberOfEntries" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            قیمت قدیم 
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="number" asp-for="OldPrice"  class="form-control col-md-7 col-xs-12">
                            <span asp-validation-for="OldPrice" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            قیمت جدید
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <input type="number" asp-for="Price" required="required" class="form-control col-md-7 col-xs-12">
                            <span asp-validation-for="Price" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            نمایش برچسب تخفیف
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select type="text" asp-for="DiscountLable" required="required" class="form-control col-md-7 col-xs-12">
                                <option value="true">نمایش بده</option>
                                <option value="false">نمایش نده</option>
                            </select>
                            <span asp-validation-for="DiscountLable" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            دسته بندی
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select type="text" asp-for="ChaildCategoryCategoryId" asp-items="@ViewBag.Category" required="required" class="form-control col-md-7 col-xs-12"></select>
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            محصول منتخب
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select type="text" asp-for="IsSelectedProduct" required="required" class="form-control col-md-7 col-xs-12">
                                <option value="false">ثبت به عنوان محصول معمولی</option>
                                <option value="true">ثبت به عنوان محصول منتخب</option>
                            </select>
                            <span asp-validation-for="IsSelectedProduct" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">
                            محصول ویژه
                            <span class="required">*</span>
                        </label>
                        <div class="col-md-6 col-sm-6 col-xs-12">
                            <select type="text" asp-for="IsSpecialSale" required="required" class="form-control col-md-7 col-xs-12">
                                <option value="false">ثبت به عنوان محصول معمولی</option>
                                <option value="true">ثبت به عنوان محصول ویژه</option>
                            </select>
                            <span asp-validation-for="IsSpecialSale" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-6 col-sm-6 col-xs-12 col-md-offset-3">
                            <a href="/Admin/Product/Index" class="btn btn-primary">انصراف</a>
                            <button type="submit" class="btn btn-success">ثبت محصول</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section AdminScripts
{
    <script src="~/AdminAsset/vendors/nicedit/niceditjs.js" type="text/javascript"></script>
    <script type="text/javascript">bkLib.onDomLoaded(nicEditors.allTextAreas);</script>
}
