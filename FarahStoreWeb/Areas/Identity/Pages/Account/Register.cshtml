@page
@using FarahStoreUtilities
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model ReazorLearning.Areas.Identity.Pages.Account.RegisterModel
@{
    ViewData["Title"] = "ثبت نام کاربران";
    
}
<section class="inner-page" id="contact-page">
    <div class="container-fluid" id="page-hero">
        <div class="row">
            <div class="col-12">
                <div class="container">
                    <div class="row">
                        <div class="col-12 px-0">
                            <h1>عضویت در سایت</h1>
                            <p>با عضویت در سایت از همه امکانات روبیک مارکت بهره مند شوید.</p>
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="./index.html">صفحه نخست</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">عضویت</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="container py-2 py-md-5">
        <div class="row">
            <div class="col-12 col-sm-10 offset-sm-1">
                <div class="content">
                    <div class="row">
                        <div class="col-12 col-lg-5 text-center">
                            <img src="~/assets/images/login.png" alt="">
                        </div>
                        <div class="col-12 col-lg-7 pt-5 pt-md-0 align-self-center">
                            <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                                <div class="title">عضویت در روبیک مارکت</div>
                                <p>با ورود به ناحیه کاربری خود از همه امکانات سایت بهره مند شوید.</p>
                                <div class="form-group">
                                    <label asp-for="Input.FullName">نام و نام خانوادگی :</label>
                                    <input type="text" asp-for="Input.FullName" class="form-control" autocomplete="username" aria-required="true">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.PhoneNumber">شماره موبایل :</label>
                                    <input type="text" asp-for="Input.PhoneNumber" class="form-control" autocomplete="username" aria-required="true">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Email">پست الکترونیک :</label>
                                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true">
                                </div>
                                <div class="form-group">
                                    <label asp-for="Input.Password">رمز عبور :</label>
                                    <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" type="password">
                                </div>
                                <div class="form-group">
                                    <label for="password">تایید رمز عبور :</label>
                                    <input type="password" asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true">
                                </div>
                                @if (User.IsInRole(SD.ManagerRole))
                                {
                                    <div class="form-floating my-2">
                                        <input type="radio" name="rdUserRole" class="checkbox" value="@SD.ManagerRole" />@SD.ManagerRole<br/>
                                        <input type="radio" name="rdUserRole" class="checkbox" value="@SD.EmployeeRole" />@SD.EmployeeRole<br/>
                                        <input type="radio" name="rdUserRole" class="checkbox" value="@SD.CustomerRole" />@SD.CustomerRole<br/>
                                    </div>
                                }
                                <div class="form-group">
                                    <button id="registerSubmit" type="submit" class="btn btn-success" >تکمیل ثبت نام</button>
                                </div>
                            </form>
                           
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>


@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
